{
	"compilerOptions": {
		"target": "es6",
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true, // Needed by Angular 2 DI
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node"
	}
}